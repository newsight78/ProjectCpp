{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++-14 활성 파일 빌드",
            "command": "/opt/homebrew/bin/g++-14",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "디버거에서 생성된 작업입니다."
        },
        {
            "label": "cargo build",
            "type": "shell",
            "command": "cargo",
            "args": ["build"],
            "options": {
                "cwd": "/usr/local/ProjectRust/Rustlib" 
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": ["$rustc"],
            "detail": "Rust 라이브러리 빌드 작업입니다."
        }
        
    ]
}
